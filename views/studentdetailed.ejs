<%- include('./base/header.ejs') %>
<div class="container">
    <div class="alert bg-success my-3">
      <h4 class="text-center" style="color:black">Students list</h4>
    </div>
  </div>
  <div class="container">
    <div class="row">
        <table class="table text-center">
            <thead>
                <tr>
                   <th>Roll No</th>
                   <th>First Nmae</th>
                   <th>Last Name</th>
                   <th>Father Name</th>
                   <th>Aadhar Card</th>
                   <th>Mobile No</th>
                   <th>Actions</th>
                </tr>
            </thead>
            <% students.forEach((student)=>{ %>
                <tr>
                    <td><%= student.rollNo %></td>
                    <td><%= student.firstName %></td>
                    <td><%= student.lastName %></td>
                    <td><%= student.fatherName %></td>
                    <td><%= student.adharCardNo %></td>
                    <td><%= student.mobileNo %></td>
                    <td><a href="/student/edit/page/<%= student._id %>" class="btn btn-warning w-40">edit</a></td>
                    <td><a href="/delete/student/<%= student._id %>" class="btn btn-danger w-40">delete</a></td>
                </tr>

           <% }) %>
        </table>
    </div>
  </div>

<%- include('./base/footer.ejs') %>